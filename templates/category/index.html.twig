{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories</h1>

    <a href="{{ path('category_new') }}" class="btn btn-primary">Create New Category</a>

    <table class="table mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('category_edit', {id: category.id}) }}" class="btn btn-secondary">Edit</a>
                        <form method="post" action="{{ path('category_delete', {id: category.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
